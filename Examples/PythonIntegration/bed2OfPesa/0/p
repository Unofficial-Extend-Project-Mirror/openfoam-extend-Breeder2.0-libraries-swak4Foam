FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions          [ 1 -1 -2 0 0 0 0 ];

internalField       uniform 0;

referenceLevel      0;

boundaryField
{
    walls
    {
        //        type               zeroGradient;
        type               buoyantPressure;
    }
    outlet
    {
        type               fixedValue;
        value              uniform 0;
    }
    inlet
    {
        type               zeroGradient;
    }
    frontAndBackPlanes
    {
        type               empty;
    }
}

