FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      faceSetDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

actions (
    {
        type faceSet;

        name beforeFilter;

        action new;
        
        source expressionToFace;
        
        sourceInfo {
            expression "zone(inlet)";
        }
    }
    {
        type faceSet;

        name afterFilter;

        action new;
        
        source expressionToFace;
        
        sourceInfo {
            expression "zone(outlet)";
        }
    }
    {
        type cellSet;

        name afterFilterSlaveCells;

        action new;
        
        source expressionToCell;
        
        sourceInfo {
            expression "zone(outlet)";
        }
    }
    {
        type cellSet;

        name beforeFilterSlaveCells;

        action new;
        
        source expressionToCell;
        
        sourceInfo {
            expression "zone(inlet)";
        }
    }
    {
        type cellSet;

        name porosity;

        action new;
        
        source expressionToCell;
        
        sourceInfo {
            expression "zone(porosity)";
        }
    }
);

