FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "initialConditions"

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform $flowVelocity;

boundaryField
{
    #include "fixedInlet"

    outlet
    {
        type            inletOutlet;
        inletValue      uniform (0 0 0);
        value           $internalField;
    }

    ".+Wall.*"
    {
        type            fixedValue;
        value           $internalField;
    }

    "bike._.*"
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    #include "frontBackUpperPatches"
}


