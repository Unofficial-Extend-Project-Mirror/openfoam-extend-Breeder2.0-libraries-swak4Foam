FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      alpha.water.org;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    leftWall
    {
        type            zeroGradient;
    }

    rightWall
    {
        type            zeroGradient;
    }

    lowerWall
    {
        type            zeroGradient;
    }

    atmosphere
    {
        type            groovyBC;
        gradientExpression "0";
        fractionExpression "(phi<0 || aValue>0.01) ? 1 : 0";
        valueExpression "aValue";
        value           uniform 0;
#include "include/alphaMove"
    }

    defaultFaces
    {
        type            empty;
    }
}

