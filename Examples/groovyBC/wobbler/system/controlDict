FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     solidDisplacementFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         20;

deltaT          0.01;

writeControl    runTime;

writeInterval   0.1;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression compressed;

timeFormat      general;

timePrecision   6;

graphFormat     raw;

runTimeModifiable yes;

functions (
    // listVariables {
    //     type listRegisteredObjects;
    // }
    biggestD
    {
        type patchExpression;
        patches (
            free
            forced
            other
        );
        expression "mag(D)";
        accumulations (
            max
        );
        verbose true;
    }
    biggestDFreeMem
    {
        type swakExpression;
        valueType patch;
        patchName free;
        storedVariables (
            {
                name maxD;
                initialValue "0";
            }
        );
        variables ( "maxD=( mag(D) > maxD) ? mag(D) : maxD;");
        accumulations (
            max
        );
        expression "maxD";
        verbose true;
    }
    // listFields {
    //     type listRegisteredObjects;
    // }
    biggestDFreeMem2
    {
        type patchExpression;
        patches (
            free
            forced
        );
        storedVariables (
            {
                name maxD;
                initialValue "0";
            }
        );
        variables ( "maxD=( mag(D) > maxD) ? mag(D) : maxD;");
        accumulations (
            max
        );
        expression "maxD";
        verbose true;
    }
    biggestDVolMem
    {
        type swakExpression;
        valueType internalField;
        storedVariables (
            {
                name maxD;
                initialValue "0";
            }
        );
        variables ( "maxD=( mag(D) > maxD) ? mag(D) : maxD;");
        accumulations (
            max
        );
        expression "maxD";
        verbose true;
    }
    biggestDVol
    {
        type swakExpression;
        valueType internalField;
        accumulations (
            max
        );
        expression "mag(D)";
        verbose true;
    }
    biggestDField
    {
        type expressionField;
        fieldName maxDField;
        storedVariables (
            {
                name maxD;
                initialValue "0";
            }
        );
        variables (
            "maxD=( mag(D) > maxD) ? mag(D) : maxD;"
        );
        expression "maxD";
        autowrite true;
        outputControl timeStep;
        outputInterval 1;
        //        debugCommonDriver 1;
    }
    // listVariables {
    //     type listRegisteredObjects;
    // }
);

libs (
    "libOpenFOAM.so"
    "libgroovyBC.so"
    "libsimpleSwakFunctionObjects.so"
    "libswakFunctionObjects.so"
);

