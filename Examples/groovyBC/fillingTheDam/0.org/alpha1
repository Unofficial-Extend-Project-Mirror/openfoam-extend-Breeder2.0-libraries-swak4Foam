FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      alpha;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    leftWall
    {
        type            zeroGradient;
    }

    rightWall
    {
        type groovyBC;
        globalScopes (
            fillDam
            fillDamBC
        );
        valueExpression "1";
        fractionExpression "(pos().y < inHeight) ? 1 : 0";
        variables (
            "outerArea=(max(pts().y)-min(pts().y))*(max(pts().z)-min(pts().z));"
            "totalArea=sum(area());"
            "areaRatio=outerArea/totalArea;"
        );

        value uniform 0;
    }

    lowerWall
    {
        type            zeroGradient;
    }

    atmosphere
    {
        type            inletOutlet;
        inletValue      uniform 0;
        value           uniform 0;
    }

    defaultFaces
    {
        type            empty;
    }
}

// ************************************************************************* //
