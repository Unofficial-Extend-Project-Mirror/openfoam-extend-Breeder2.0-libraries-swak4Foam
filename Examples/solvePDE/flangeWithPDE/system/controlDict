FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     laplacianFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         10;

deltaT          0.005;

writeControl    runTime;

writeInterval   0.1;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression compressed;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

functions
{
    TSteady {
        type solveLaplacianPDE;
        outputControl   timeStep;
        outputInterval  1;

        solveAt startup;
        fieldName TSteady;
        steady true;
        //        rho "1" [0 -2 1 0 0 0 0];
        lambda "4e-5" [0 2 -1 0 0 0 0];
        source "0" [0 0 -1 1 0 0 0];
    }
    TTransient {
        type solveLaplacianPDE;
        outputControl   timeStep;
        outputInterval  1;

        solveAt timestep;
        fieldName TTransient;
        steady false;
        rho "1" [0 0 0 0 0 0 0];
        lambda "4e-5" [0 2 -1 0 0 0 0];
        source "0" [0 0 -1 1 0 0 0];
    }
    TSteadyAlternate {
        type solveLaplacianPDE;
        outputControl   timeStep;
        outputInterval  1;

        solveAt write;
        fieldName TSteadyAlternate;
        steady false;
        rho "1" [0 0 0 0 0 0 0];
        lambda "4e-5" [0 2 -1 0 0 0 0];
        source "0" [0 0 -1 1 0 0 0];
    }
    compareSteady {
        type swakExpression;
        verbose true;
        expression "T-TSteady";
        accumulations (
            min
            max
            average
        );
        valueType internalField;
    }
    compareSteadyAlternate {
        type swakExpression;
        verbose true;
        expression "T-TSteadyAlternate";
        accumulations (
            min
            max
            average
        );
        valueType internalField;
    }
    compareTransient {
        type swakExpression;
        verbose true;
        expression "T-TTransient";
        accumulations (
            min
            max
            average
        );
        valueType internalField;
    }
}

libs (
    "libOpenFOAM.so"
    "libsimpleSwakFunctionObjects.so"
    "libswakFunctionObjects.so"
) ;

// ************************************************************************* //
