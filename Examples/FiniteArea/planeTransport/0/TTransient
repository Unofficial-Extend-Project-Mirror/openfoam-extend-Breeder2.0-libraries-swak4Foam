FoamFile
{
    version     2.0;
    format      ascii;
    class       areaScalarField;
    location    "0";
    object      Cs;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions          [0 0 0 1 0 0 0];

internalField       uniform 300;

referenceLevel      0;

boundaryField
{
    inlet {
        type groovyBC;
        value uniform 1;
        variables (
            "const=500;"
            "amplitude=100;"
            "minY=min(pos().y);"
            "maxY=max(pos().y);"
        );
        valueExpression "const+amplitude*sin(2*pi*(pos().y-minY)/(maxY-minY))";
    }
    outlet {
        type zeroGradient;
    }
    bound {
        type symmetryPlane;
    }
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
