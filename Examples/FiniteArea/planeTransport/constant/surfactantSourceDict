FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      dynamicMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

variables (
    "where=(pos().y<0.05 && pos().x>0.05 && pos().x<0.15) ? 1 : 0;"
    "strength=0.1;"
);

expression   "where*strength";

dimensions [1 -2 -1 0 0 0 0];


