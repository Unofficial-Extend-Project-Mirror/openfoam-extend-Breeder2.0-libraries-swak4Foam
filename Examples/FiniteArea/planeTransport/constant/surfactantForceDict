FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      dynamicMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

variables (
    "locX=0.1*(1+0.3*cos(2*time()));"
    "strength=0.1;"
);

valueExpression   "strength";
maskExpression    "pos().y>0.075 && pos().x>(locX-0.02) && pos().x<(locX+0.02)";


