FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U2;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions          [ 0 1 -1 0 0 0 0 ];

internalField       uniform (0 0 0);

boundaryField
{
    bottom
    {
        type               groovyBC;
        value              uniform (0 0 0);
	valueExpression "1.1*U1";
    }

    top
    {
        type               pressureInletOutletVelocity;
        phi                phi2;
        value              $internalField;
    }

    walls
    {
        type               fixedValue;
        value              uniform (0 0 0);
    }

    floor 
    {
      $walls;
    }
      
    frontBack
    {
        type               empty;
    }
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
